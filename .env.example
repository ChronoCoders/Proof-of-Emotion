# EmotionalChain Custom Blockchain Environment Configuration 
# Copy this file to .env and update with your settings 
 
# ============================================================================= 
# APPLICATION SETTINGS 
# ============================================================================= 
NODE_ENV=development 
PORT=8001 
 
# ============================================================================= 
# CUSTOM BLOCKCHAIN NETWORK CONFIGURATION 
# ============================================================================= 
BLOCKCHAIN_NETWORK_ID=emotional-chain-custom 
BLOCKCHAIN_BOOTSTRAP_NODES=localhost:8000 
BLOCKCHAIN_MAX_PEERS=50 
BLOCKCHAIN_PORT=8001 
 
# Network timing 
BLOCKCHAIN_BLOCK_TIME=6000 
BLOCKCHAIN_CONSENSUS_TIMEOUT=30000 
BLOCKCHAIN_HEARTBEAT_INTERVAL=30000 
 
# ============================================================================= 
# BLOCKCHAIN PARAMETERS 
# ============================================================================= 
BLOCKCHAIN_GENESIS_TIMESTAMP=1640995200000 
BLOCKCHAIN_INITIAL_DIFFICULTY=4 
BLOCKCHAIN_MINING_REWARD=10 
BLOCKCHAIN_MIN_TRANSACTION_FEE=0.001 
 
# ============================================================================= 
# PROOF OF EMOTION CONSENSUS SETTINGS 
# ============================================================================= 
POE_MIN_VALIDATORS_FOR_CONSENSUS=3 
POE_CONSENSUS_THRESHOLD=0.67 
POE_EMOTIONAL_AUTHENTICITY_THRESHOLD=0.75 
POE_MIN_VALIDATOR_STAKE=1000 
 
# ============================================================================= 
# BIOMETRIC VALIDATION SETTINGS 
# ============================================================================= 
BIOMETRIC_DATA_ENCRYPTION=true 
BIOMETRIC_ENABLE_HEART_RATE=true 
BIOMETRIC_ENABLE_FACIAL_RECOGNITION=true 
BIOMETRIC_ENABLE_VOICE_ANALYSIS=true 
BIOMETRIC_ENABLE_SKIN_RESPONSE=true 
BIOMETRIC_ENABLE_EYE_TRACKING=true 
 
# ============================================================================= 
# DATA STORAGE CONFIGURATION 
# ============================================================================= 
BLOCKCHAIN_DATA_DIR=./emotional-chain-data 
BLOCKCHAIN_WALLET_DATA_DIR=./wallet-data 
BLOCKCHAIN_CHAIN_DATA_DIR=./blockchain-data 
 
# ============================================================================= 
# DEVELOPMENT AND TESTING SETTINGS 
# ============================================================================= 
BLOCKCHAIN_ENABLE_TEST_BIOMETRICS=true 
BLOCKCHAIN_MOCK_BIOMETRIC_DEVICES=true 
BLOCKCHAIN_CREATE_TEST_ACCOUNTS=true 
 
# ============================================================================= 
# INTEGRATION WITH EXISTING POE APP 
# ============================================================================= 
INTEGRATE_WITH_POE_APP=true 
POE_APP_API_ENDPOINT=http://localhost:5000 
POE_SHARE_ML_ENGINE=true 
