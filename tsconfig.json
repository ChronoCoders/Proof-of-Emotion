{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "checkJs": false,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "importHelpers": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "noEmitOnError": false,
    "preserveConstEnums": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./emotional-chain/SRC/*"],
      "@blockchain/*": ["./emotional-chain/SRC/blockchain/*"],
      "@network/*": ["./emotional-chain/SRC/network/*"], 
      "@wallet/*": ["./emotional-chain/SRC/wallet/*"],
      "@server/*": ["./server/*"],
      "@client/*": ["./client/*"],
      "@contracts/*": ["./contracts/*"],
      "@ml-engine/*": ["./ml-engine/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "emotional-chain/SRC/**/*",
    "server/**/*",
    "client/src/**/*", 
    "shared/**/*",
    "ml-engine/**/*.ts",
    "scripts/**/*.ts",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js",
    "**/*.jsx",
    "client/dist",
    "**/*.test.js",
    "**/*.spec.js",
    "coverage",
    "build",
    "emotional-chain/SRC/**/*.js",
    "ml-engine/**/*.py",
    "**/*.pyc",
    "**/poe_env/**",
    "**/venv/**",
    "**/__pycache__/**"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}